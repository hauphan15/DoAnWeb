<div class="container">
    <h4 class="text-center" style="margin-top:40px;margin-bottom:20px;">Danh sách đọc giả</h4>
    <form action="" method="POST" role="form" style="margin-bottom:20px;">
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <label for="stt">ID</label>
                    <input readonly type="text" class="form-control" id="stt" name="ID">
                </div>
                <div class="form-group">
                    <label for="stt">Họ tên</label>
                    <input readonly type="text" class="form-control" id="hoten" name="HoTen">
                </div>
                <div class="form-group">
                    <label for="ncl">Số ngày còn lại</label>
                    <input type="text" class="form-control" id="ncl" name="NgayConLai" placeholder="Số ngày còn lại ">
                </div>
            </div>
        </div>

        <div style="margin-top:20px;">
            <button formaction="/admin/docgia/delete" style="width:150px;" type="submit"
                class="btn btn-outline-danger"><i class="fas fa-trash-alt" style="margin-right:10px;"></i>Xóa</button>
            <button formaction="/admin/docgia/update" style="width:150px;" type="submit"
                class="btn btn-outline-success"><i class="fas fa-pen" style="margin-right:10px;"></i>Cập
                nhật</button>
        </div>
    </form>

    <div>
        <table class="table table-bordered table-hover" id="tbl">
            <thead style="text-align:center;">
                <tr>
                    <th>ID</th>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Họ tên</th>
                    <th>Ngày sinh</th>
                    <th>Số ngày còn lại</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.docgia}}
                <tr>
                    <td scope="row">{{ID}}</td>
                    <td>{{TenDangNhap}}</td>
                    <td>{{Email}}</td>
                    <td>{{HoTen}}</td>
                    <td>{{format3 NgaySinh}}</td>
                    <td>{{NgayConLai}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    var tb = document.getElementById("tbl");
    for (let i = 1; i < tb.rows.length; i++) {
        tb.rows[i].onclick = function () {
            document.getElementById("stt").value = this.cells[0].innerHTML;
            document.getElementById("hoten").value = this.cells[3].innerHTML;
            document.getElementById("ncl").value = this.cells[5].innerHTML;
        };
    }
</script>
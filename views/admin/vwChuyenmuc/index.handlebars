<div class="container">
    <h4 class="text-center" style="margin-top:40px;margin-bottom:20px;">Danh sách chuyên mục</h4>
    <form action="" method="POST" role="form" style="margin-bottom:20px;">
        <div class="row">
            <div class="col-1">
                <input type="text" class="form-control" placeholder="ID" id="stt" name="ID">
            </div>
            <div class="col-2">
                <input type="text" class="form-control" placeholder="Chuyên mục" id="cm" name="ChuyenMuc">
            </div>
            <div class="col-4">
                <div class="input-group">
                    <input type="text" aria-label="First name" class="form-control" placeholder="Chuyên mục con"
                        name="CMC1" id="cmc1">
                    <input type="text" aria-label="Last name" class="form-control" placeholder="Chuyên mục con"
                        name="CMC2" id="cmc2">
                </div>
            </div>
            <div class="col-2">
                <input type="text" class="form-control" placeholder="Số bài viết" id="sbv" name="SoBai">
            </div>
            <div class="col-2">
                <input type="text" class="form-control" placeholder="Biên tập viên" id="btv" name="BienTapVien">
            </div>
        </div>
        <div style="margin-top:20px;">
            <button style="width:150px;" type="submit" class="btn btn-outline-primary"><i class="fas fa-plus"
                    style="margin-right:10px;"></i>Thêm</button>
            <button style="width:150px;" type="button" class="btn btn-outline-danger"><i class="fas fa-trash-alt"
                    style="margin-right:10px;"></i>Xóa</button>
            <button style="width:150px;" type="button" class="btn btn-outline-success"><i class="fas fa-pen"
                    style="margin-right:10px;"></i>Cập
                nhật</button>
        </div>
    </form>

    <table class="table table-bordered table-hover" id="tbl">
        <thead style="text-align:center;">
            <tr>
                <th>ID</th>
                <th>Chuyên mục</th>
                <th colspan="2">Chuyên mục con</th>
                <th>Số bài viết</th>
                <th>Biên tập viên</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.chuyenmuc}}
            <tr>
                <td>{{ID}}</td>
                <td>{{ChuyenMuc}}</td>
                <td style="width:200px;">{{CMC1}}</td>
                <td>{{CMC2}}</td>
                <td>{{SoBai}}</td>
                <td>{{BienTapVien}}</td>
                <td style="width:120px;">
                    <button type="button" class="btn btn-sm btn-outline-secondary">Xem chi tiết</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    var tb = document.getElementById("tbl");
    for (let i = 1; i < tb.rows.length; i++) {
        tb.rows[i].onclick = function () {
            document.getElementById("stt").value = this.cells[0].innerHTML;
            document.getElementById("cm").value = this.cells[1].innerHTML;
            document.getElementById("cmc1").value = this.cells[2].innerHTML;
            document.getElementById("cmc2").value = this.cells[3].innerHTML;
            document.getElementById("sbv").value = this.cells[4].innerHTML;
            document.getElementById("btv").value = this.cells[5].innerHTML;
        };
    }
</script>
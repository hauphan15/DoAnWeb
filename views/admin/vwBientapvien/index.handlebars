{{#section 'cssbtv'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'jsbtv'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $(function () {
        $('#ns').datetimepicker({
            format: 'd/m/Y',
            timepicker: false,
            mask: true,
        });
    })
</script>
{{/section}}

<h4 class="text-center" style="margin-top:40px;margin-bottom:20px;">Danh sách biên tập viên</h4>
<form novalidate action="" method="POST" role="form" style="margin-bottom:20px;" id="form">
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label for="txttendn">ID</label>
                <input readonly type="text" class="form-control" id="stt" name="ID">
            </div>
            <div class="form-group">
                <label for="txttendn">Họ tên</label>
                <input readonly type="text" class="form-control" id="ht" name="HoTen">
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label for="txttendn">Bút danh</label>
                <input type="text" class="form-control" name="ButDanh" id="bd">
            </div>
            <div class="form-group">
                <label for="txttendn">ID chuyên mục quản lý</label>
                <input type="text" class="form-control" name="ID_ChuyenMuc" id="idcm">
            </div>
        </div>
    </div>
    <div style="margin-top:20px;">
        <button formaction="/admin/bientapvien/delete" style="width:150px;" type="submit"
            class="btn btn-outline-danger"><i class="fas fa-trash-alt" style="margin-right:10px;"></i>Xóa</button>
        <button formaction="/admin/bientapvien/update" style="width:150px;" type="submit"
            class="btn btn-outline-success"><i class="fas fa-pen" style="margin-right:10px;"></i>Cập
            nhật</button>
    </div>
</form>
<table class="table table-bordered table-hover" id="tbl">
    <thead style="text-align:center;">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Bút danh</th>
            <th>ID Chuyên mục quản lý</th>
        </tr>
    </thead>
    <tbody>
        {{#each this.bientapvien}}
        <tr>
            <th scope="row">{{ID}}</th>
            <td>{{Email}}</td>
            <td>{{HoTen}}</td>
            <td>{{format3 NgaySinh}}</td>
            <td>{{ButDanh}}</td>
            <td>{{ID_CMQL}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>


<script>
    var tb = document.getElementById("tbl");
    for (let i = 1; i < tb.rows.length; i++) {
        tb.rows[i].onclick = function () {
            document.getElementById("stt").value = this.cells[0].innerHTML;
            document.getElementById("ht").value = this.cells[2].innerHTML;
            document.getElementById("bd").value = this.cells[4].innerHTML;
            document.getElementById("idcm").value = this.cells[5].innerHTML;
        };
    }
</script>
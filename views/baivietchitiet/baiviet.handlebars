<div style="width:913px;margin-left:90px;">
    <div class="chuyenmuc" style="margin-top:20px;">
        <a href="/chuyenmuc/{{this.baivietchitiet.ID_ChuyenMuc}}/baiviet"
            style="text-decoration: none;color: black;font-size:25px;font:Arial;">
            <b>{{this.baivietchitiet.TenChuyenMuc}}</b>
        </a>
    </div> 
    <hr>
    <div class="row">
        <div class="col-sm-8 content">
            <div class="tieu-de">
                <p style="color:red;font-size:xx-large;font:Arial;">
                    <b >
                        {{this.baivietchitiet.TenBaiViet}}
                    </b>
                </p>
            </div>
            <div class="ngay">
                <p style="color:slategray"> {{format this.baivietchitiet.NgayDang}}</p>
            </div>

            <div class="tom-tat">
                <p style="font-size:large;font:Arial;">
                    <b>
                        {{this.baivietchitiet.TomTat}}
                    </b>
                </p>
            </div>
            <div class="chi-tiet-bai-viet">
                <br><br>
                <div>
                    {{{this.baivietchitiet.NoiDung}}}
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <b> {{this.baivietchitiet.BienTapVien}} </b>
            </div>

            <div class="tag-list" style="margin-top:25px;margin-bottom: 25px;">
                <ul style="margin-bottom: 0rem;" class="list-inline">
                    <li class="list-inline-item">
                        <a style="margin-bottom:5px;background:#e9e9e9;color: black;border:none;"
                            class="btn btn-primary btn-sm" href="/xemtheotag/{{this.baivietchitiet.Tag1}}" name="Tag1"
                            role="button">{{this.baivietchitiet.Tag1}}
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a style="margin-bottom:5px;background:#e9e9e9;color: black;border:none;"
                            class="btn btn-primary btn-sm" href="/xemtheotag/{{this.baivietchitiet.Tag2}}" name="Tag1"
                            role="button">{{this.baivietchitiet.Tag2}}
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a style="margin-bottom:5px;background:#e9e9e9;color: black;border:none;"
                            class="btn btn-primary btn-sm" href="/xemtheotag/{{this.baivietchitiet.Tag3}}" name="Tag1"
                            role="button">{{this.baivietchitiet.Tag3}}
                        </a>
                    </li>
                </ul>
            </div>

            <div class="binh-luan">
                <h4><b>Bình luận</b></h4>
                <br>
                <div>
                    <p>Ý kiến của bạn:</p>
                    <textarea class="form-control" rows="auto" id="comment" name="BinhLuan"></textarea>
                    <div class="d-flex justify-content-end">
                        <button type="button"
                            style="width:100px;text-align: center;margin-top: 10px;margin-bottom: 10px;"
                            class="btn btn-success">Bình
                            luận</button>
                    </div>
                </div>
            </div>

            <div class="danh-sach-binh-luan" style="margin-bottom:15px;">
                <h5 style="margin-top:15px;">Bình luận của đọc giả:</h5>
                <br>
                <ul class="list-group list-group-flush">
                    {{#each this.binhluan}}
                    <li class="list-group-item">
                        <h6 style="color:red;">
                            <i class="fa fa-user" style="margin-right: 8px;color:lightgray;margin-top: 12px;"></i>
                            {{TenDocGia}}
                        </h6>
                        <p>{{NoiDung}}</p>
                        <ul class="list-inline">
                            <li class="list-inline-item"><i class="fas fa-thumbs-up"></i> </li>
                            <li class="list-inline-item">
                                <h6>{{LuocThich}}</h6>
                            </li>
                        </ul>
                        <span>{{Ngay}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <hr>

        <div class="col-sm-4">
            <h5 style="color: black;">Cùng chuyên mục</h5>
            <div class="list-group list-group-flush">
                {{#each this.cungcm}}
                <div class="list-group-item" style="width: 80%">
                    <a href="/chitietbaiviet/{{ID}}"><img src="{{AnhDaiDien}}" style="width: 100%">
                    </a>
                    <a style="text-decoration: none;color: black;" href="/chitietbaiviet/{{ID}}">
                        <h6 style="padding-top: 8px;">{{TenBaiViet}}</h6>
                    </a>
                    <span title="{{format NgayDang}}">{{format2 NgayDang}}</span>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
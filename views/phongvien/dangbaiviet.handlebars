<h4 class="text-center" style="margin-top:20px;"><b>ĐĂNG BẢN TIN</b></h4>

<form action="" method="POST" role="form" style="margin-bottom:20px;">
    <div class="form-group">
        <label for="exampleFormControlSelect1">Chuyên mục</label>
        <select class="form-control" id="exampleFormControlSelect1">
            {{#each this.chuyenmuc}}
            <option>{{ChuyenMuc}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Chuyên mục con</label>
        <select class="form-control" id="exampleFormControlSelect1">
            {{#each this.chuyenmuc}}
            <option>{{CMC1}}</option>
            <option>{{CMC2}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Tiêu đề</label>
        <input type="email" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Các tag</label>
        <div class="input-group">
            <input type="text" class="form-control">
            <input type="text" class="form-control">
            <input type="text" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Tóm tắt</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

    <div class="form-group" style="height:auto;">
        <label for="exampleFormControlTextarea1">Nội dung</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="editor1" rows="10"></textarea>
        <script>
            CKEDITOR.replace('editor1');
        </script>
    </div>
    <div style="text-align:center;margin-top: 50px;margin-bottom: 50px;">
        <button type="submit" class="btn btn-primary">Đăng bản tin</button>
    </div>
</form>
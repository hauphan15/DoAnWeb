{{#section 'js'}}
<script
    src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=vz4czdokcip1w2272wtcxuitz6j7v1xxr6zbl9q7ox4rejr1"></script>
<script>
    $(function () {
        tinymce.init({
            selector: '#NoiDung',
            height: 800,
            menubar: false,
            plugins: 'paste image link autolink lists table media',
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
                'forecolor backcolor',
                'table link image media',
            ],
        });
    })
</script>
{{/section}}

<h4 class="text-center" style="margin-top:20px;"><b>ĐĂNG BẢN TIN</b></h4>

<form action="" method="POST" role="form" style="margin-bottom:20px;">
    <div class="form-group">
        <label for="">ID_TK</label>
        <input readonly style="width:150px;" type="text" class="form-control" id="ID_TK" name="ID_TK"
            value="{{this.ID_TK}}">
    </div>
    <div class="form-group">
        <label for="">ID</label>
        <input readonly style="width:150px;" type="text" class="form-control" id="ID_BVPV" name="ID_BVPV"
            value="{{this.ID_BVPV}}">
    </div>
    <div class="form-group">
        <div class="input-group">
            <div>
                <label for="">Chuyên mục</label>
                <select class="form-control" id="TenChuyenMuc" name="TenChuyenMuc">
                    {{#each this.chuyenmuc}}
                    <option>{{ChuyenMuc}}</option>
                    {{/each}}
                </select>
            </div>
            <div style="margin-left:20px;">
                <label for="">ID Chuyên mục</label>
                <input type="text" class="form-control" id="ID_ChuyenMuc" name="ID_ChuyenMuc">
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="input-group">
            <div>
                <label for="">Chuyên mục con</label>
                <select class="form-control" id="ChuyenMucCon" name="ChuyenMucCon">
                    {{#each this.chuyenmuc}}
                    <option>{{CMC1}}</option>
                    <option>{{CMC2}}</option>
                    {{/each}}
                </select>
            </div>
            <div style="margin-left:20px;">
                <label for="">ID Chuyên mục con</label>
                <input type="text" class="form-control" id="ID_CMC" name="ID_CMC">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="">Tên bài viết</label>
        <input class="form-control" id="TenBaiViet" name="TenBaiViet">
    </div>

    <div class="form-group">
        <label for="">Các tag</label>
        <div class="input-group">
            <input type="text" class="form-control" id="tag1" name="tag1">
            <input type="text" class="form-control" id="tag2" name="tag2">
            <input type="text" class="form-control" id="tag3" name="tag3">
        </div>
    </div>

    <div class="form-group">
        <label for="">Tóm tắt</label>
        <textarea class="form-control" id="TomTat" name="TomTat" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label for="">Ảnh đại diện</label>
        <textarea class="form-control" id="AnhDaiDien" name="AnhDaiDien" rows="3"></textarea>
    </div>

    <div class="form-group" style="height:auto;">
        <label for="">Nội dung</label>
        <textarea class="form-control" id="NoiDung" name="NoiDung" rows=""></textarea>
    </div>
    <div style="text-align:center;margin-top: 50px;margin-bottom: 50px;">
        <button type="submit" formaction="/writer/dangbaiviet/submit" class="btn btn-primary">Đăng bản tin</button>
    </div>
</form>
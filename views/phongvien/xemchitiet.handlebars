{{#section 'js'}}
<script
    src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=vz4czdokcip1w2272wtcxuitz6j7v1xxr6zbl9q7ox4rejr1"></script>
<script>
    $(function () {
        tinymce.init({
            selector: '#NoiDung',
            height: 500,
            menubar: false,
            plugins: 'paste image link autolink lists table media',
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
                'forecolor backcolor',
                'table link image media',
            ],
        });
    })
</script>
{{/section}}

<h4 class="text-center" style="margin-top:20px;"><b>Chi tiết bài viết</b></h4>

<form action="" method="POST" role="form" style="margin-bottom:20px;">
    <div class="form-group">
        <label for="exampleFormControlSelect1">ID BVPV</label>
        <input readonly style="width:150px;" class="form-control" id="ID_BVPV" name="ID_BVPV"
            value="{{this.xemchitiet.ID_BVPV}}">
    </div>
    <div class="form-group">
        <div class="input-group">
            <div>
                <label for="exampleFormControlSelect1">Chuyên mục</label>
                <select class="form-control" id="TenChuyenMuc" name="TenChuyenMuc">
                    <option value="{{this.xemchitiet.TenChuyenMuc}}">{{this.xemchitiet.TenChuyenMuc}}</option>
                </select>
            </div>
            <div style="margin-left:20px;">
                <label for="exampleFormControlSelect1">ID Chuyên mục</label>
                <input type="text" class="form-control" id="ID_ChuyenMuc" name="ID_ChuyenMuc"
                    value="{{this.xemchitiet.ID_ChuyenMuc}}">
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="input-group">
            <div>
                <label for="exampleFormControlSelect1">Chuyên mục con</label>
                <select class="form-control" id="ChuyenMucCon" name="ChuyenMucCon">
                    <option value="{{this.xemchitiet.ChuyenMucCon}}">{{this.xemchitiet.ChuyenMucCon}}</option>
                </select>
            </div>
            <div style="margin-left:20px;">
                <label for="exampleFormControlSelect1">ID Chuyên mục con</label>
                <input type="text" class="form-control" id="ID_CMC" name="ID_CMC" value="{{this.xemchitiet.ID_CMC}}">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Tên bài viết</label>
        <input class="form-control" id="TenBaiViet" name="TenBaiViet" value="{{this.xemchitiet.TenBaiViet}}">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Các tag</label>
        <div class="input-group">
            <input type="text" class="form-control" id="tag1" name="tag1" value="{{this.xemchitiet.Tag1}}">
            <input type="text" class="form-control" id="tag2" name="tag2" value="{{this.xemchitiet.Tag2}}">
            <input type="text" class="form-control" id="tag3" name="tag3" value="{{this.xemchitiet.Tag3}}">
        </div>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Tóm tắt</label>
        <textarea class="form-control" id="TomTat" name="TomTat" rows="3">{{this.xemchitiet.TomTat}}</textarea>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Ảnh đại diện</label>
        <textarea class="form-control" id="AnhDaiDien" name="AnhDaiDien"
            rows="3">{{this.xemchitiet.AnhDaiDien}}</textarea>
    </div>

    <div class="form-group" style="height:auto;">
        <label for="exampleFormControlTextarea1">Nội dung</label>
        <textarea class="form-control" id="NoiDung" name="NoiDung" rows="50">{{this.xemchitiet.NoiDung}}</textarea>
        <script>
            CKEDITOR.replace('editor1');
        </script>
    </div>

    <div style="text-align:center;margin-top: 50px;margin-bottom: 50px;">
        <button formaction="/writer/xemchitiet/capnhat" style="width:150px;" type="submit"
            class="btn btn-outline-primary"><i class="fas fa-pen" style="margin-right:10px;"></i></i>Cập nhật</button>
    </div>
</form>